<% if user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(user.errors.count, "error") %> prohibited this user action:</h2>

    <ul>
    <% user.errors.full_messages.each do  |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: user do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username, placeholder: "jdoe" %>
  <%= form.label :email %>
  <%= form.email_field :email, placeholder: "johndoe@gmail.com" %>
  <%= form.label :password %>
  <%= form.password_field :password, placeholder: "ex@mplePass" %>
  <%= form.submit "Submit" %>
<% end %>
